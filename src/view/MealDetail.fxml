<Pane maxHeight="250.0" maxWidth="200.0" minHeight="250.0" minWidth="200.0" prefHeight="250.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.MealDetailController">
   <children>
      <AnchorPane minHeight="0.0" minWidth="0.0" onMouseClicked="#clickMeal" prefHeight="250.0" prefWidth="200.0" stylesheets="@../css/styles.css">
         <children>
            <VBox prefHeight="250.0" prefWidth="200.0" stylesheets="@../css/styles.css">
               <children>
                  <HBox fx:id="bhMealDetail" prefHeight="50.0" prefWidth="200.0">
                     <children>
                        <Label fx:id="lbName" prefHeight="50.0" prefWidth="146.0" text="Breakfast">
